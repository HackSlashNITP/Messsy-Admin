<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hackslash.messsyadmin">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MesssyAdmin">
        <activity android:name=".Activity.SplashscreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.MessEditProfile"/>
        <activity android:name=".Activity.AdminEditProfile" />
        <activity android:name=".Activity.MessFragmentContainer" />
        <activity android:name=".Activity.ContactUs" />
        <activity android:name=".Activity.AdminFragmentContainer" />
        <activity android:name=".Activity.AdminComplaintActivity" />
        <activity android:name=".Activity.AdminConversationActivity" />
        <activity android:name=".Activity.AdminNoticeActivity" />
        <activity android:name=".Activity.AdminStudentTrackActivity" />
        <activity android:name=".Activity.AdminAbsenteesActivity" />
        <activity android:name=".Activity.MessReportIssueActivity" />
        <activity android:name=".Activity.AdminRegisterActivity" />
        <activity android:name=".Activity.MessRegisterActivity" />
        <activity android:name=".Activity.LoginActivity">

        </activity>
        <activity android:name=".Activity.MessMenuActivity" />
        <activity android:name=".Activity.MessConversationActivity" />
        <activity android:name=".Activity.MessNoticeActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>
