<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="6dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="18dp"
        app:cardElevation="4dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/person_icon"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/complaint_box_boy_icon" />

            <TextView
                android:id="@+id/name_of_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/person_icon"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="0dp"
                android:layout_toRightOf="@+id/person_icon"
                android:fontFamily="@font/josefin_sans_semibold"
                android:text="Arjun Singh"
                android:textColor="@color/black"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/date_complaint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_of_person"
                android:layout_alignLeft="@+id/name_of_person"
                android:text="12th April 2021"
                android:textColor="#F19A33"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/headingOfComplain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/person_icon"
                android:layout_marginLeft="7dp"
                android:fontFamily="@font/roboto"
                android:text="Heading Of Complain"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/descriptionComplain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/headingOfComplain"
                android:layout_marginLeft="7dp"
                android:text="@string/complaintBoxDescription1"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imageComplain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/lineComplaint"
                android:layout_below="@id/descriptionComplain"
                android:padding="30dp"/>

            <View
                android:id="@+id/lineComplaint"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/descriptionComplain"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:background="#AA9494" />

            <TextView
                android:id="@+id/upvotesComplaint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lineComplaint"
                android:layout_alignLeft="@+id/descriptionComplain"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="5dp"
                android:text="165 Upvotes"
                android:textColor="#AA9494"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/commentComplaint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/upvotesComplaint"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/upvotesComplaint"
                android:text="20 Comments"
                android:textColor="#AA9494"
                android:textSize="15sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>