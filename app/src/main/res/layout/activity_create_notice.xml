<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.CreateNoticeActivity">

    <TextView
        android:id="@+id/createnotice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/josefin_sans_semibold"
        android:text="Create Notice"
        android:textColor="@color/black"
        android:textSize="32sp" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="80dp"
        android:layout_alignParentStart="true"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/createnotice"
        android:background="@drawable/ic_baseline_arrow_back_24" />

    <androidx.cardview.widget.CardView
        android:layout_height="70dp"
        android:id="@+id/sujectcardview"
        app:cardElevation="15dp"
        app:cardCornerRadius="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:layout_below="@id/createnotice"
        android:inputType="textPersonName"
        android:elevation="800dp">
        <EditText
            android:id="@+id/subject_edit_text"
            android:inputType="text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:hint="Type the Subject"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:fontFamily="@font/josefin_sans_semibold"
            android:textSize="22sp"
            android:background="@null"
            android:importantForAutofill="no"
            />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/typenoticecardview"
        app:cardElevation="15dp"
        app:cardCornerRadius="25dp"
        android:layout_centerHorizontal="true"
        android:elevation="800dp"
        android:layout_below="@id/sujectcardview"
        android:layout_marginTop="60dp"
        android:inputType="textPersonName"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="45dp">
        <EditText
            android:id="@+id/notice_description_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:hint="Type the Notice"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:fontFamily="@font/josefin_sans_semibold"
            android:textSize="22sp"
            android:inputType="text"
            android:importantForAutofill="no"
            android:background="@null"/>
    </androidx.cardview.widget.CardView>
        <Button
            android:id="@+id/create_notice"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_below="@id/typenoticecardview"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_alignStart="@id/typenoticecardview"
            android:layout_alignEnd="@id/typenoticecardview"
            android:layout_alignLeft="@id/typenoticecardview"
            android:layout_alignRight="@id/typenoticecardview"
            android:text="Send"
            android:fontFamily="@font/josefin_sans_semibold"
            android:textAllCaps="false"
            android:elevation="800dp"
            android:background="@drawable/registerbutton"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>

</RelativeLayout>